<div class="row">
  <div class="col-md-10 col-12 mx-auto mt-5">
    <form action="/restaurants" method="POST">
      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="inputEmail4">餐廳名稱</label>
          <input type="text" class="form-control" name="name" placeholder="餐廳名稱">
        </div>
        <div class="form-group col-md-4">
          <label for="inputEmail4">餐廳英文名稱</label>
          <input type="text" class="form-control" name="name_en" placeholder="餐廳英文名稱">
        </div>
        <div class="form-group col-md-4">
          <label for="inputPassword4">餐廳類別</label>
          <input type="text" class="form-control" name="category" placeholder="餐廳類別">
        </div>
        <div class="form-group col-md-3">
          <label for="inputPassword4">地址</label>
          <input type="text" class="form-control" name="location" placeholder="地址">
        </div>
        <div class="form-group col-md-3">
          <label for="inputPassword4">連絡電話</label>
          <input type="text" class="form-control" name="phone" placeholder="連絡電話">
        </div>
        <div class="form-group col-md-3">
          <label for="inputPassword4">Google Map</label>
          <input type="text" class="form-control" name="google_map" placeholder="Google Map連結">
        </div>
        <div class="form-group col-md-3">
          <label for="inputPassword4">評分</label>
          <input type="text" class="form-control" name="rating" placeholder="評分">
        </div>
      </div>
      <div class="form-group">
        <label for="inputAddress">Image URL</label>
        <input type="text" class="form-control" name="image" placeholder="https://">
      </div>
      <div class="form-group">
        <label for="inputAddress">針對餐廳的描述</label>
        <textarea type="text" class="form-control" name="description" placeholder="針對餐廳的描述"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">送出資料</button>
    </form>
    {{#if result}}
      <div class="alert alert-info mt-3" role="alert">
        <span class="mr-2">資料填寫不完整！</span>
      </div>
    {{/if}}
  </div>
</div>