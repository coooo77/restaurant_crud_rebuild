<div class="row">
  <div class="col-md-10 col-12 mx-auto mt-5">
    <form action="/restaurants/{{list._id}}/edit?_method=PUT" method="POST">
      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="inputEmail4">Name</label>
          <input type="text" class="form-control" name="name" placeholder="餐廳名稱" value="{{list.name}}">
        </div>
        <div class="form-group col-md-4">
          <label for="inputEmail4">English Name</label>
          <input type="text" class="form-control" name="name_en" placeholder="餐廳英文名稱" value="{{list.name_en}}">
        </div>
        <div class="form-group col-md-4">
          <label for="inputPassword4">Category</label>
          <input type="text" class="form-control" name="category" placeholder="餐廳類別" value="{{list.category}}">
        </div>
        <div class="form-group col-md-3">
          <label for="inputPassword4">Location</label>
          <input type="text" class="form-control" name="location" placeholder="地址" value="{{list.location}}">
        </div>
        <div class="form-group col-md-3">
          <label for="inputPassword4">Phone</label>
          <input type="text" class="form-control" name="phone" placeholder="連絡電話" value="{{list.phone}}">
        </div>
        <div class="form-group col-md-3">
          <label for="inputPassword4">Google Map</label>
          <input type="text" class="form-control" name="google_map" placeholder="Google Map連結"
            value="{{list.google_map}}">
        </div>
        <div class="form-group col-md-3">
          <label for="inputPassword4">Rating</label>
          <input type="text" class="form-control" name="rating" placeholder="評分" value="{{list.rating}}">
        </div>
      </div>
      <div class="form-group">
        <label for="inputAddress">Image URL</label>
        <input type="text" class="form-control" name="image" placeholder="https://" value="{{list.image}}">
      </div>
      <div class="form-group">
        <label for="inputAddress">Description</label>
        <textarea type="text" class="form-control" name="description"
          placeholder="針對餐廳的描述">{{list.description}}</textarea>
      </div>
      <button type="submit" class="btn btn-primary">Send</button>
    </form>
    {{#if result}}
      <div class="alert alert-info mt-3" role="alert">
        <span class="mr-2">資料填寫不完整！</span>
      </div>
    {{/if}}
  </div>
</div>